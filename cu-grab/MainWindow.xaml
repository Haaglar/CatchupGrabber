<Window x:Class="cu_grab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catch-up Grabber" Height="500" Width="500"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="errorLabel" HorizontalAlignment="Left" Margin="260,374,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.628,0.369" Height="54" TextWrapping="Wrap" Width="191" Text="Double click on a show, then double click on an episode to grab it."/>
        <ListBox x:Name="objectList" HorizontalAlignment="Left" Height="241" Margin="10,10,0,0" VerticalAlignment="Top" Width="374" MouseDoubleClick="oL_ItemPressed" FontSize="14"/>
        <Button x:Name="toShows" Content="Shows" HorizontalAlignment="Left" Margin="400,223,0,0" VerticalAlignment="Top" Width="75" Click="Shows_Pressed" Height="28"/>
        <Button x:Name="ButtonTenplay" Content="Tenplay" HorizontalAlignment="Left" Margin="10,371,0,0" VerticalAlignment="Top" Width="75" Click="ButtonTenplay_Click"/>
        <Button x:Name="ButtonRTVEClan" Content="RTVEClan" HorizontalAlignment="Left" Margin="90,371,0,0" VerticalAlignment="Top" Width="75" Click="ButtonRTVEC_Click"/>
        <ProgressBar x:Name="ProgressBarDL" HorizontalAlignment="Left" Height="28" Margin="10,268,0,0" VerticalAlignment="Top" Width="178"/>
        <TextBlock x:Name="TextBlockDownloadStatus" HorizontalAlignment="Left" Margin="10,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="ButtonSettings" Content="Settings" HorizontalAlignment="Left" Margin="400,182,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="ButtonSettings_Click"/>
        <Button x:Name="ButtonPlus7" Content="Plus7" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Width="75" Click="ButtonPlus7_Click"/>
        <Button x:Name="ButtonRTE" Content="RTE" HorizontalAlignment="Left" Margin="90,398,0,0" VerticalAlignment="Top" Width="75" Click="ButtonRTE_Click"/>


    </Grid>
</Window>
